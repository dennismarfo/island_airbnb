<div class="container-fluid container-properties vh-100 d-flex align-items-center">
    <div class="col-4 p-4 center bg-white">
        <h2 class="text-center color-white">Create a booking</h2>
        <div>
        <%= simple_form_for [@property, @booking] do |f| %>
        <%= f.input :check_in_date, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :check_out_date, as: :string,  input_html: { class: "datepicker" } %>
         <button type="button" class="btn btn-success color-white" data-toggle="modal" data-target="#exampleModal">
        RÃ©server
        </button>
      </div>
    </div>
</div>

<!-- popup -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmez-vous?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Total price
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger color-white" data-dismiss="modal">Cancel</button>
        <%= f.submit 'Confirmer', class: "btn btn-success color-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
