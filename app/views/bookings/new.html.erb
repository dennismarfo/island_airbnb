<div class="container-fluid container-properties vh-100 d-flex align-items-center">
  <div class="col-4 p-4 center bg-white">
    <h2 class="text-center color-white">Create a booking</h2>
    <div>
      <%= simple_form_for [@property, @booking] do |f| %>
      <%= f.input :check_in_date, as: :string, input_html: { class: "datepicker" } %>
      <%= f.input :check_out_date, as: :string,  input_html: { class: "datepicker" } %>
      <button type="button" class="btn btn-success color-white" data-toggle="modal" data-target="#exampleModal" id="book">
        Réserver
      </button>
    </div>
  </div>
</div>
<!-- popup -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="height: 1000px;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4> <div data-price=" <%= @property.price.to_i %> " id="popup"></div> <div> <p> Tarif total du séjour:</p></div>
        <div><h4 id="prix"></h4>
        €</div></h4>

        <h6 class="modal-title" id="exampleModalLabel"></h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-body">
        <div> <p> Laissez nous un message si vous le désirez! </p></div>
        <div> <p> ------ </p> </div>
          <%= f.input :message %>
          <div class=" modal-footer d-flex justify-content-between">
            <button type="button" class="btn btn-danger color-white" data-dismiss="modal">Retour</button>
            <%= f.submit 'Valider ma réservation', class: "btn btn-success color-white" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
