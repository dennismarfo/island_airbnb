<div style="background-image: url('https://source.unsplash.com/featured/?{Beach},{island}'); background-size :cover; background-repeat: no-repeat; height: 100vh; align-items: center; display:flex;" >
  <div class="col-4 p-4" style="margin: 0 auto; border-radius: 5px">
    <h2 class="text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions btn btn-success rounded-lg text-content-center align-content-center d-flex">
      <div style="margin: 0 auto;">
        <%= f.button :submit, "Log in" %>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

