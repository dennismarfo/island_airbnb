<div class="cards">
  <div class="container mt-3 mb-3 d-flex flex-wrap" style="min-height: 100vh">
    <% @properties.each do |property| %>
      <div class="col-4">
        <%= link_to property_path(property) do %>
          <div class="card-trip rounded-lg">
            <%= cl_image_tag property.photo, width: 400, height: 300, crop: :fill%>
            <div class="d-flex">
              <div class="card-trip-infos">
                <div>
                  <h2>
                    <%=link_to property.name, property_path(property) %>
                  </h2>
                  <p>
                    <%= property.country %>
                  </p>
                </div>
              </div>
              <div class="" style="align-items: center;
    display: flex;     margin-left: auto; padding-right: 5px;">
                <h6><%= property.price %> â‚¬ </h6>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="mt-3" id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
  </div>
</div>

