
<div class="container" style="min-height: 100vh">

  <div class="card-price p-4">
 <div class="banner" style="background-image: url(<%= cl_image_path @property.photo %>);">

 </div>
 <br>


 <div class="row">
  <div class="col-8 description">
    <h2>Welcome to</h2>
    <h1> <%= @property.name %></h1>
    <h4>Located in the <%= @property.country %></h4>
    <h4><%= @property.description %></h4>
    <p>
    </p>
  </div>
  <div class="col-4 text-center">
    <div style="align-items: center;
    display: column;     margin-left: auto; padding-right: 5px"; class="card-price">
    <div class="border-bottom mb-3">
      <p> Owned by </p>
      <h3><%= @property.user.first_name %> <%= @property.user.last_name %></h3>
    </div>
    <div class="mb-3">
      <h3><%= @property.price %> € / day</h3>
    </div>
    <div class="btn btn-success color-white mb-3">
      <h4><%= link_to "Réserver", new_property_booking_path(@property) %></h4>
    </div>
  </div>
  <div class="card-price">
    <p>  </p>
  </div>
</div>
 <div class="mt-3" id="map2" style="width: 100%; height: 600px;" data-marker="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>
<div>
    <h4>Reviews</h4> <%= link_to 'Add new', new_property_review_path(@property) %>
    <% @property.reviews.each do |review| %>
    <div class="col-10 border rounded d-flex" style="background-color: #FFFFFF">
    <div class="rounded-circle">
      <%= review.user.avatar %>
    </div>
    <div>
      <h5><%= review.user_id %></h5>
      <div style="background-color: #EBEDEF; padding-left: 3px;">
      <p><%= review.content %></p>
      </div>
    </div>

</div>

      <br>
    <% end %>
  </div>
</div>

</div>
